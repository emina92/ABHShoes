<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table-bordered">
  <thead>
    <tr>
      <th class="text-center"><%= model_class.human_attribute_name(:id) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:title) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:description) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:price) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:image) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-center"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="col-md-1 text-center"><%= link_to product.id, product_path(product) %></td>
        <td class="col-md-2 text-center"><%= product.title %></td>
        <td class="col-md-2 text-center"><%= product.description %></td>
        <td class="col-md-1 text-center"><%= product.price %>$</td>
        <td class="col-md-2 text-center"><%= image_tag(product.image, class: "menu_icon") %></td>
        <td class="col-md-2 text-center"><%=l product.created_at %></td>
        <td class="col-md-1 text-center">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_product_path,
              :class => 'btn btn-primary' %>
</div>
