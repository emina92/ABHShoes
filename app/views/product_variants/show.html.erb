<%- model_class = ProductVariant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:size) %>:</strong></dt>
  <dd><%= @product_variant.size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @product_variant.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:color_id) %>:</strong></dt>
  <dd><%= @product_variant.color.name %></dd>
  
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              product_product_variants_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_product_variant_path(@product, @product_variant), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_product_variant_path(@product, @product_variant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
