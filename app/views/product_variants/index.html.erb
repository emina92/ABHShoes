<div class="page-header">
<h2><%= @product.title %></h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center">Variant_id</th>
      <th class="text-center">Size</th>
      <th class="text-center">Quantity</th>
      <th class="text-center">Color</th>
      <th class="text-center"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @product.product_variants.each  do |product_variant| %>
      <tr>
        <td class="text-center"><%= product_variant.id %></td>
        <td class="text-center"><%= product_variant.size %></td>
        <td class="text-center"><%= product_variant.quantity %></td>
        <td class="text-center"><%= product_variant.color.name %></td>
        <td class="text-center">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_product_variant_path(@product, product_variant), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_product_variant_path(@product, product_variant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>
<div class="row">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_product_product_variant_path(@product),
              :class => 'btn btn-primary' %>
</div>

