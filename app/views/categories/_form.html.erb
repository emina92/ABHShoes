<%= form_for @category, :html => { :class => "form-horizontal category col-md-6 col-lg-7" } do |f| %>

    <% if @category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label required'%>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control', maxlength: 20, required: true %>
    </div>
    <%= error_span(@category[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control', maxlength: 50 %>
    </div>
    <%= error_span(@category[:description]) %>
  </div>

  <div class="row">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              categories_path, :class => 'btn btn-default' %>
  </div>

  <script>
    $("form").change(function () {
      if (!window.onbeforeunload) {
        window.onbeforeunload = function() {
          return "You have unsaved changes.";
        };
      };
    })

    $("form").submit(function () {
      window.onbeforeunload = null;
    });
  </script>

<% end %>
