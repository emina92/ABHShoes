<%- model_class = Category -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center"><%= model_class.human_attribute_name(:id) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:name) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:description) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="text-center"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="text-center"><%= link_to category.id, category_path(category) %></td>
        <td class="text-center"><%= category.name %></td>
        <td class="text-center description" title="<%= category.description %>"><%= category.description %></td>
        <td class="text-center"><%= category.created_at.strftime("%b %d, %Y") %></td>
        <td class="text-center">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_category_path(category), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      category_path(category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_category_path,
              :class => 'btn btn-primary' %>
</div>
